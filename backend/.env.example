# Application Settings
APP_NAME="Context Keeper"
DEBUG=true
SECRET_KEY="your-secret-key-here-change-in-production"

# API Keys (Optional - for cloud LLMs)
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""

# Database Configuration
# Qdrant (Vector Database)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=""
QDRANT_COLLECTION=context_events

# Neo4j (Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=contextkeeper2024

# Redis (Cache & Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# SQLite (Metadata)
SQLITE_DB_PATH=./data/context_keeper.db

# Embedding Models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CODE_EMBEDDING_MODEL=microsoft/codebert-base

# LLM Configuration
LLM_PROVIDER=ollama  # Options: ollama, openai, anthropic
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct

# Collector Settings
GIT_POLL_INTERVAL=60  # seconds
MAX_COMMIT_HISTORY=1000

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]
